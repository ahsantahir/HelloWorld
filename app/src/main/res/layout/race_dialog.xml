    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentsHeading"
        android:layout_below="@id/dialogRaceTypeValue"
        android:text="Comments:"
        android:textColor="#0073a8"
        android:layout_marginTop="14dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/commentsHeading"
        android:id="@+id/commentsField"
        android:hint="Type Comments Here..."
        android:gravity="start"
        android:textSize="12sp"

        android:background="@drawable/comments_background"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postCommentButton"
        android:background="@drawable/button_layout"
        android:text="POST"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/commentsField"
        android:layout_marginBottom="4dp"
