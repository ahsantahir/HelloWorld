<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Time: "
        android:id="@+id/dialogRaceTime"
        android:textColor="#0073a8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogRaceTime"
        android:text="Total Distance: "
        android:id="@+id/dialogRaceDistance"
        android:textColor="#0073a8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogRaceDistance"
        android:text="Total Laps: "
        android:id="@+id/dialogRaceLaps"
        android:textColor="#0073a8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogRaceLaps"
        android:textColor="#0073a8"
        android:text="Type:"
        android:id="@+id/dialogRaceType"
        />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogRaceTypeValue"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/dialogRaceType"
        android:entries="@array/race_types"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogRaceTimeValue"
        android:layout_alignParentRight="true"
        android:text="00:1:05"
        android:layout_alignBottom="@id/dialogRaceTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogRaceDistanceValue"
        android:layout_alignParentRight="true"
        android:text="50 m"
        android:layout_alignBottom="@id/dialogRaceDistance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogRaceLapsValue"
        android:layout_alignParentRight="true"
        android:text="2"
        android:layout_alignBottom="@id/dialogRaceLaps" />

