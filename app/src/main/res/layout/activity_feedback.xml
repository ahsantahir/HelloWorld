<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sabeeh.helloworld.FeedbackActivity">

    <include layout="@layout/header"
        android:id="@+id/include1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelFeedback"
        android:layout_below="@id/include1"
        android:text="If you don’t see a good answer for your query in the FAQ, please write to us:"
        android:textSize="20sp"
        android:textColor="#444444"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comments_background"
        android:layout_below="@id/labelFeedback"
        android:gravity="start"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Write Feedback here"
        android:id="@+id/feedbackField"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbackField"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:text="POST FEEDBACK"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/postFeedbackButton"
        android:background="@drawable/button_post_background"/>

