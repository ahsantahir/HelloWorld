<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sabeeh.helloworld.LoginActivity"
    android:background="@drawable/background2" >

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/logo"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="16dp" />-->




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"

        android:id="@+id/CustomSetup"





        android:layout_marginBottom="100dp"


        android:background="#b4ffffff">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/UsernameTextField"
            android:layout_gravity="center_horizontal"
            android:hint="Username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PasswordTextField"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:hint="Password" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Sign up"
                android:id="@+id/CustomSignUp"
                android:layout_marginTop="2dp"

                android:layout_marginLeft="5dp"
                android:background="@drawable/button_post_background"
                android:textColor="@color/white"
                android:onClick="CustomRegister" />

            <Button
                android:layout_marginTop="2dp"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Login"
                android:id="@+id/CustomLogin"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_post_background"
                android:textColor="@color/white"
                android:onClick="CustomLogin" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButtonsHolder"

    android:layout_marginTop="350dp"
        android:layout_marginLeft="75dp"


        android:orientation="vertical"
       >

        <!--INSERT FACEBOOK BUTTON HERE-->

        <Button
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:id="@+id/signupButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="Login_Facebook"
            android:background="@drawable/button_facebook"
            android:layout_marginBottom="14dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:id="@+id/signupButtonGoogle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="Login_Google"
            android:background="@drawable/button_google"
            android:layout_marginBottom="14dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:id="@+id/signupButtonTwitter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="Login_Twitter"
            android:background="@drawable/button_twitter"
            android:layout_marginBottom="14dp"
            />

    </LinearLayout>



</RelativeLayout>
