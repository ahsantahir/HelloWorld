<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#0073a8">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:id="@+id/swimLogo"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pageTitle"
        android:text="Spin and Swim"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/swimLogo"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/action_menu_button_layout"
        android:layout_alignParentRight="true"
        android:id="@+id/headerMenuButton"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/headerSwimButton"
        android:src="@drawable/swim_header_layout"
        android:layout_toLeftOf="@id/headerMenuButton"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/headerAnalysisButton"
        android:src="@drawable/analysis_button_layout"
        android:layout_toLeftOf="@id/headerSwimButton"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>